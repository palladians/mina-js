{
	"name": "mina-js",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"build:packages": "turbo build --filter=\"./packages/*\"",
		"test": "turbo test",
		"cleanup": "bun run --filter '*' cleanup && rimraf node_modules .turbo",
		"lint": "bunx biome check .",
		"format": "bunx biome check . --write --unsafe"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@tsconfig/bun": "1.0.7",
		"@types/bun": "1.1.6",
		"rimraf": "^6.0.1",
		"tsup": "8.2.3",
		"turbo": "^2.0.11",
		"type-fest": "^4.26.1",
		"typescript": "5.5.4"
	},
	"workspaces": ["packages/*", "apps/*"],
	"packageManager": "bun@1.1.21",
	"resolutions": {
		"zod": "3.23.8"
	}
}
